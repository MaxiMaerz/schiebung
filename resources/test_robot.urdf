<?xml version="1.0"?>
<robot name="test_robot">
  <!-- Links -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <link name="link2">
    <visual>
      <geometry>
        <cylinder length="0.3" radius="0.04"/>
      </geometry>
    </visual>
  </link>

  <link name="end_effector">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </visual>
  </link>

  <!-- Joints -->
  <joint name="base_to_link1" type="fixed">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0.0 0.0 0.5" rpy="0.0 0.0 0.0"/>
  </joint>

  <joint name="link1_to_link2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.5 0.0 0.0" rpy="0.0 1.5708 0.0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1"/>
  </joint>

  <joint name="link2_to_end_effector" type="fixed">
    <parent link="link2"/>
    <child link="end_effector"/>
    <origin xyz="0.3 0.0 0.0" rpy="0.0 0.0 1.5708"/>
  </joint>
</robot>
